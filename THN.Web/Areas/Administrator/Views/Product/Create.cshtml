@model THN.Core.Models.ProductModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content-header">
    <h1>
        Thêm mới
        <small>Sản phẩm</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","Home")"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
        <li><a href="@Url.Action("Index")">Danh sách sản phẩm</a></li>
        <li class="active">Thêm mới</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Thêm mới sản phẩm</h3>
                    <div class="pull-right">
                        <a href="@Url.Action("Index")" class="btn btn-default"><i class="fa fa-undo"></i> Trở lại</a>
                    </div>
                </div>
                <div class="box-body">
                    @using (Html.BeginForm("Create","Product", FormMethod.Post, new { @id="frmProduct", @enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.Partial("ProductForm", Model);
                        <div class="form-group hide">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" id="btnSubmitForm" value="Create" class="btn btn-default" />
                            </div>
                        </div>
                    }
                </div>
                <div class="box-footer">
                    <div class="pull-right">
                        <button type="button" id="btnReset" class="btn btn-danger"><i class="fa fa-refresh"></i> Huỷ</button>
                        <button type="button" id="btnSubmit" class="btn btn-info"><i class="fa fa-save"></i> Lưu</button>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
@section Css{
    <link rel="stylesheet" href="~/Themes/backend/plugins/iCheck/all.css">
}
@section Scripts{
    <script src="~/Themes/backend/plugins/iCheck/icheck.min.js"></script>
    <script src="~/Themes/backend/plugins/ckeditor/ckeditor.js"></script>
    <script src="~/Themes/backend/plugins/ckfinder/ckfinder.js"></script>
    <script type="text/javascript" src="~/Scripts/admin/admin.product.form.js"></script>
    <script type="text/javascript">
        $(function () {

            var msgError = "@Html.Raw(TempData["ErrorMsg"])";
            if (!$.isEmptyObject(msgError)) {
                $.notify(msgError, "warm");
            }
        });
    </script>
}